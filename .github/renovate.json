{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends":[
    "config:best-practices"
  ],

  "printConfig": true,

  "hostRules": [
    {
      "hostType": "docker",
      "username": "process.env.DOCKERHUB_USERNAME",
      "token": "process.env.DOCKERHUB_TOKEN"
    }
  ],

  "packageRules": [
    {
      "groupName": "gh-actions",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
